<% include ../partials/header %>

<div class="row">
    <div class="col-md-12">
        <form action="/password/reset/<%= token %>" method="POST">
            <legend>Reset Password</legend>
            <div class="form-group">
                <label for="password"> New Password</label>
                <input type="text" name="password" value="" placeholder="New Password" autofocus="autofocus" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="confirm"> Confirm Password</label>
                <input type="text" name="confirm" value="" placeholder="Confirm Password" class="form-control"/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update Password</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>