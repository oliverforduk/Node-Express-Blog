<% include ../partials/header %>

<h1>Edit your comment for <%= blogpost.title %></h1>

<form action="/blogposts/<%= blogpost._id %>/comments/<%= comment._id %>?_method=PUT" method="post">
    <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required maxlength="120">
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Edit Comment</button>
    </div>
</form>
<a href="javascript:history.back()">Go Back</a>

<% include ../partials/footer %>